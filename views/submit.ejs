<%- include('partials/header'); -%>
<div class="todolist-background">
  <div class="button-dis-center">
    <a href="/logout">
        <button class="submit-button-home but-mar-ra">Logout</button>
      </a>
    <button class="submit-button-home but-mar-lf">Submit your secret</button>
  </div>
  <div class="absolute-hide-content">
    <div class="form-secret-submit  secret-sub-padding">
        <form action="/secret" method="post" class="secret-form">
          <label for="secret" class="label-secret"
            >Share favourites things anonymously:</label
          >
          <input
            type="text"
            name="secretText"
            placeholder="Your secret"
            class="input-login sec-inp"
            required
          />
          <button type="submit" class="login-btn sec-inp sub-close-when-sub">Submit</button>
        </form>
        <button class="close-submit-model">
            <img src="/images/cross.webp" alt="" class="cross-logo">
        </button>
      </div>
  </div>
  <!-- Todolist part -->
  <div class="form-secret-submit todolist-margin">
    <h1>Todolist</h1>
    <form action="/todolist" method="post">
      <input
        type="text"
        name="title"
        placeholder="Title"
        class="input-login"
        required
      />
      <textarea
        name="content"
        rows="5"
        placeholder="Your content..."
        class="input-login textarea"
        required
      ></textarea>
      <button type="submit" class="login-btn sec-inp">Add to List</button>
    </form>
  </div>
  <div class="todolist-dis-flex">
    <% todoItems.map(todo => { %>
        <div class="todolistItems-display">
            <div class="list-delete-flex">
              <h2><%= todo.title %></h2>
              <form action="/deletelist" method="post">
                <button type="submit" name="deleteButton" value="<%= todo._id %>" class="button-delete-list">
                  <img src="images/delete.png" alt="" class="delete-logo" />
                </button>
              </form>
            </div>
            <h5><%= todo.content %></h5>
          </div>
   <% }) %>
  </div>
  <%- include('partials/footerText'); -%>
</div>
<%- include('partials/footer'); -%>
